{
  "name": "kubesearch-mcp-server",
  "version": "0.1.4",
  "description": "MCP server for querying k8s-at-home-search helm deployment examples",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "download-db": "./download-databases.sh"
  },
  "keywords": [
    "mcp",
    "kubernetes",
    "helm",
    "k8s-at-home"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.4.1",
    "vitest": "^4.0.16"
  }
}
